<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp" >

    <TextView
        android:id="@+id/studentOrgName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:paddingBottom="12dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
	<LinearLayout 
	    android:layout_width = "match_parent"
	    android:layout_height = "wrap_content"
	    android:orientation="horizontal"
	    android:weightSum="4">
	    	 <TextView
	    	     android:id="@+id/eventTitleTextView"
	    	     android:layout_width="match_parent"
	    	     android:layout_height="wrap_content"
	    	     android:text="@+string/enter_event_name_textView"
	    	     android:layout_weight="2.5"
	    	     android:textAppearance="?android:attr/textAppearanceSmall">"
	    	     
	    	 </TextView>
		     <EditText
		        android:id="@+id/eventTitle"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:maxLines="1"
		        android:hint="@+string/enter_event_name"
		        android:paddingBottom="8dp" 
		        android:layout_weight="1.5">
	
	        	<requestFocus />
	    	</EditText>
	</LinearLayout>
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/eventStartDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:hint="@string/start_date"
            android:onClick="onClick"
            android:paddingBottom="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/eventStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:clickable="true"
            android:hint="@string/start_time"
            android:onClick="onClick"
            android:paddingBottom="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/eventEndDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:hint="@string/end_date"
            android:onClick="onClick"
            android:paddingBottom="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/eventEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:clickable="true"
            android:hint="@string/end_time"
            android:onClick="onClick"
            android:paddingBottom="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4">
	    <TextView 
	        android:id="@+id/eventLocationTextView"
	        android:layout_width = "match_parent"
	        android:layout_height = "wrap_content"
	        android:text="@+string/search_text_textView"
	        />
        
	    <AutoCompleteTextView
	        android:id="@+id/eventLocation"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:completionThreshold="1"
	        android:maxLines="1"
	        android:hint="@string/search_text"
	        android:paddingBottom="8dp" />
	
	    <TextView
	        android:id="@+id/eventDescriptionTextView"
	        android:layout_width = "match_parent"
	        android:layout_height = "wrap_content"
	        android:text="@+string/add_event_description_textView"
	        />
	    <EditText
	        android:id="@+id/eventDescription"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="@+string/add_event_description"
	        android:maxLines="4"
	        android:maxHeight="50dp"
	        android:paddingBottom="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp" >

        <TextView
            android:id="@+id/eventAdmissionFee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:text="@+string/event_admission_fee"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/eventAdmissionRadioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/eventFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@+string/event_free" />

            <RadioButton
                android:id="@+id/eventPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@+string/event_paid" />
        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        >
     
        	<TextView
	            android:id="@+id/eventCost_textView"
	            android:layout_width = "wrap_content"
	            android:layout_height ="wrap_content"
	            android:text="@+string/enter_cost_textView"
	            android:layout_toLeftOf="@+id/eventCost"
	            android:paddingTop="12dp"
		        android:paddingLeft="8dp"
		        android:visibility="invisible"
            />
	   		<EditText
		        android:id="@+id/eventCost"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:hint="@string/enter_cost"
		        android:inputType="numberDecimal"
		        android:maxLines="1"
		        android:paddingBottom="8dp"
		        android:paddingLeft="8dp"
		        android:visibility="invisible"
	        
	        />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" >

        <Button
            android:id="@+id/save_event_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/event_save" />
    </LinearLayout>

</LinearLayout>